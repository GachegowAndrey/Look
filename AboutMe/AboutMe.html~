<script>
 function Complete() {
 	
 
 	document.getElementById("Example").innerHTML="<HR>"+
 	"You are welcome "+document.sell.Name.value+
 	"! </br> Are you from "+document.sell.Place.value+
 	" and you are "+document.sell.Age.value+" ,right?"+
 	" </br> And i will call you later. Is this your phone "+document.sell.Phone.value+
 	" ?  </br> Thank you for this information :"+document.sell.Message.value+" !"
 	+"</HR>";
 }
 function Reset() {
 	document.getElementById("Example").innerHTML="";
 }
</script>		
